<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master">

    <metal:block fill-slot="main">

        <h1 class="documentFirstHeading">Typesense administration</h1>

        <table class="table bg-light" tal:define="info view/collection_information">
            <thead>
                <tr>
                    <th i18n:translate="">Key</th>
                    <th i18n:translate="">Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td i18n:translate="">Collection</td>
                    <td i18n:translate="">${info/name}</td>
                </tr>
                <tr>
                    <td i18n:translate="">Created</td>
                    <td i18n:translate="">${info/created_at_str}</td>
                </tr>
                <tr>
                    <td i18n:translate=""># documents</td>
                    <td i18n:translate="">${info/num_documents}</td>
                </tr>
                <tr>
                    <td i18n:translate=""># memory shared</td>
                    <td i18n:translate="">${info/num_memory_shards}</td>
                </tr>
            </tbody>
        </table>


        <div id="actions">
            <form method="post" action="${portal_url}/@@typesense-reindex-all">
                <input type="submit" value="Reindex all" i18n:attributes="value">
            </form>
            <form method="post" action="${portal_url}/@@typesense-export-documents">
                <input type="submit" value="Export indexed content (JSONlines)" i18n:attributes="value">
            </form>
            <form method="post" action="${portal_url}/@@typesense-recreate-collection">
                <input type="submit" value="Recreate Typesense collection" i18n:attributes="value">
            </form>
        </div >

    </metal:block>
</html>
